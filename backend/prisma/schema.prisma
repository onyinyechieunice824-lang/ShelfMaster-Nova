// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(cuid())
  name        String
  username    String   @unique
  role        String
  pin         String
  isSuspended Boolean  @default(false)
}

model Product {
  id          String       @id @default(cuid())
  name        String
  description String?
  quantity    Int          @default(0)
  batches     Batch[]
  units       ProductUnit[]
  priceHistory PriceHistory[]
}

model Batch {
  id          String   @id @default(cuid())
  productId   String
  batchNumber String
  expiryDate  DateTime
  quantity    Int
  product     Product  @relation(fields: [productId], references: [id])
}

model ProductUnit {
  id        String   @id @default(cuid())
  productId String
  name      String
  multiplier Int
  barcode   String?
  price     Float
  product   Product  @relation(fields: [productId], references: [id])
}

model PriceHistory {
  id        String   @id @default(cuid())
  productId String
  date      DateTime
  oldPrice  Float
  newPrice  Float
  changedBy String
  product   Product  @relation(fields: [productId], references: [id])
}

model Transaction {
  id     String    @id @default(cuid())
  date   DateTime  @default(now())
  items  TransactionItem[]
  payments Payment[]
  isTraining Boolean @default(false)
}

model TransactionItem {
  id          String  @id @default(cuid())
  transactionId String
  productId   String
  quantity    Int
  transaction Transaction @relation(fields: [transactionId], references: [id])
}

model Payment {
  id            String @id @default(cuid())
  transactionId String
  amount        Float
  method        String
  transaction   Transaction @relation(fields: [transactionId], references: [id])
}

model Shift {
  id    String @id @default(cuid())
  name  String
  start DateTime
  end   DateTime
}

model Customer {
  id      String @id @default(cuid())
  name    String
  phone   String?
  email   String?
}

model Settings {
  id           String   @id
  name         String
  address      String
  phone        String
  currency     String
  taxRate      Float
  receiptFooter String
  branches     Branch[]
}

model Branch {
  id         String   @id @default(cuid())
  name       String
  address    String
  settingsId String
  settings   Settings @relation(fields: [settingsId], references: [id])
}

model AuditLog {
  id     String   @id @default(cuid())
  date   DateTime @default(now())
  action String
  userId String?
  details String?
}

